{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "RestApiGateway",
  "timeout": "300000ms",
  "cache_ttl": "4000s",
  "port": 8080,
  "output_encoding": "json",
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/login",
      "method": "POST",
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "kid": "sim2",
          "keys_to_sign": ["access_token", "refresh_token"],
          "cache": false,
          "jwk_url": "http://localhost:9000/jwk",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "backend": [
        {
          "url_pattern": "/auth/login",
          "method": "POST",
          "host": ["http://localhost:9000"]
        }
      ]
    },
    {
      "endpoint": "/users",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://localhost:9000/jwk",
          "operation_debug": true,
          "disable_jwk_security": true,
          "cache": false
        }
      },
      "backend": [
        {
          "url_pattern": "/users?groupId={JWT.group}",
          "method": "GET",
          "host": ["http://localhost:9000"]
        }
      ]
    },
    {
      "endpoint": "/users/me",
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://localhost:9000/jwk",
          "operation_debug": true,
          "disable_jwk_security": true,
          "cache": false
        }
      },
      "backend": [
        {
          "url_pattern": "/users/{JWT.userId}?groupId={JWT.group}",
          "method": "GET",
          "host": ["http://localhost:9000"]
        }
      ]
    },
    {
      "endpoint": "/users/{userId}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "encoding": "no-op",
          "url_pattern": "/users/{userId}?groupId={JWT.group}",
          "method": "GET",
          "host": ["http://localhost:9000"],
          "target": "user"
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://localhost:9000/jwk",
          "operation_debug": true,
          "disable_jwk_security": true,
          "cache": false
        }
      }
    }
  ]
}
